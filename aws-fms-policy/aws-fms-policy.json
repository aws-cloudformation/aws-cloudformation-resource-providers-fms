{
    "typeName": "AWS::FMS::Policy",
    "description": "Creates an AWS Firewall Manager policy.",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-fms.git",
    "definitions": {
        "AccountId": {
            "description": "An AWS account ID.",
            "type": "string",
            "pattern": "^([a-zA-Z0-9_.:/=+\\-@]+)$",
            "minLength": 1,
            "maxLength": 1024
        },
        "AccountMap": {
            "description": "An AWS account mappings.",
            "type": "object",
            "properties": {
                "ACCOUNT": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/AccountId"
                    }
                }
            },
            "required": [
                "ACCOUNT"
            ]
        },
        "ResourceTag": {
            "description": "An AWS tag.",
            "type": "object",
            "properties": {
                "Key": {
                    "type": "string",
                    "pattern": "^([a-zA-Z0-9_.:/=+\\-@]+)$",
                    "minLength": 1,
                    "maxLength": 128
                },
                "Value": {
                    "type": "string",
                    "pattern": "^([a-zA-Z0-9_.:/=+\\-@]+)$",
                    "maxLength": 256
                }
            },
            "required": [
                "Key",
                "Value"
            ]
        },
        "ResourceType": {
            "description": "An AWS resource type",
            "type": "string",
            "pattern": "^([a-zA-Z0-9_.:/=+\\-@]+)$",
            "minLength": 1,
            "maxLength": 128
        },
        "ResourceArn": {
            "description": "A resource ARN.",
            "type": "string",
            "pattern": "^([a-zA-Z0-9_.:/=+\\-@]+)$",
            "minLength": 1,
            "maxLength": 1024
        }
    },
    "properties": {
        "ExcludeMap": {
            "$ref": "#/definitions/AccountMap"
        },
        "ExcludeResourceTags": {
            "type": "boolean"
        },
        "IncludeMap": {
            "$ref": "#/definitions/AccountMap"
        },
        "PolicyId": {
            "type": "string",
            "pattern": "^[a-z0-9A-Z-]{36}$",
            "minLength": 36,
            "maxLength": 36
        },
        "PolicyName": {
            "type": "string",
            "pattern": "^([a-zA-Z0-9_.:/=+\\-@]+)$",
            "minLength": 1,
            "maxLength": 1024
        },
        "RemediationEnabled": {
            "type": "boolean"
        },
        "ResourceTags": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/ResourceTag"
            },
            "maxLength": 8
        },
        "ResourceType": {
            "$ref": "#/definitions/ResourceType"
        },
        "ResourceTypeList": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/ResourceType"
            }
        },
        "SecurityServicePolicyData": {
            "type": "object",
            "properties": {
                "ManagedServiceData": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 1024
                },
                "Type": {
                    "type": "string",
                    "enum": [
                        "WAF",
                        "SHIELD_ADVANCED",
                        "SECURITY_GROUPS_COMMON",
                        "SECURITY_GROUPS_CONTENT_AUDIT",
                        "SECURITY_GROUPS_USAGE_AUDIT"
                    ]
                }
            },
            "required": [
                "Type"
            ]
        },
        "PolicyArn": {
            "$ref": "#/definitions/ResourceArn"
        }
    },
    "additionalProperties": false,
    "required": [
        "ExcludeResourceTags",
        "PolicyName",
        "RemediationEnabled",
        "ResourceType",
        "SecurityServicePolicyData"
    ],
    "readOnlyProperties": [
        "/properties/PolicyArn",
        "/properties/PolicyId"
    ],
    "createOnlyProperties": [
        "/properties/PolicyId"
    ],
    "primaryIdentifier": [
        "/properties/PolicyId"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "fms:PutPolicy",
                "iam:PassRole",
                "waf-regional:ListRuleGroups"
            ]
        },
        "update": {
            "permissions": [
                "fms:PutPolicy",
                "fms:GetPolicy",
                "iam:PassRole",
                "waf-regional:ListRuleGroups"
            ]
        },
        "list": {
            "permissions": [
                "fms:ListPolicies"
            ]
        },
        "read": {
            "permissions": [
                "fms:GetPolicy"
            ]
        },
        "delete": {
            "permissions": [
                "fms:DeletePolicy"
            ]
        }
    }
}
